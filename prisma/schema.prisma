generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Dispatch {
  id             String        @id @default(uuid())
  dispatchNumber String?
  fileUrl        String?
  type           String        // IMPORT | EXPORT
  documentType   String        @default("CV") // CV | TTr
  date           DateTime      @default(now())
  
  transformers   Transformer[]
  
  // CV chứa danh sách TTr liên quan (self-referential relation)
  linkedTtrs     Dispatch[]    @relation("CvToTtr")
  linkedCv       Dispatch?     @relation("CvToTtr", fields: [linkedCvId], references: [id])
  linkedCvId     String?
  
  // Export liên kết với Import nguồn (self-referential relation)
  exportedDispatches Dispatch[] @relation("SourceToExport")
  sourceDispatch     Dispatch?  @relation("SourceToExport", fields: [sourceDispatchId], references: [id])
  sourceDispatchId   String?

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Transformer {
  id           String    @id @default(uuid())
  serialNumber String
  capacity     String?
  model        String?
  note         String?
  
  dispatchId   String
  dispatch     Dispatch  @relation(fields: [dispatchId], references: [id], onDelete: Cascade)

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
